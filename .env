# HOST_ADDR=192.168.11.62
USERNAME=admin
PASSWORD=public


# ─────────────────────────────────────────
# ① DJI Pilot App → HTTP 認証用 (Minimal API)
#    Pilot App からアクセスするホストIP（PCのLAN/IPアドレス）
HOST_ADDR=192.168.0.10
#    Minimal API サーバーがリッスンするポート
HTTP_PORT=5000

# ─────────────────────────────────────────
# ② バックエンド（cloud_api_sample）接続情報
#    Minimal API がトークンを発行する実際のバックエンドURL
#    Docker が公開しているポート 6789 を指定
API_URL=http://localhost:6789

# ─────────────────────────────────────────
# ③ EMQX（MQTTブローカー）接続情報
MQTT_HOST=localhost
MQTT_PORT=1883

# ─────────────────────────────────────────
# ④ Redis（トークンキャッシュ用）接続情報
REDIS_HOST=localhost
REDIS_PORT=6379

# ─────────────────────────────────────────
# ⑤ EMQX 認証情報（anonymous でも繋げる設定なら省略可）
USERNAME=admin
PASSWORD=public
# ─────────────────────────────────────────
